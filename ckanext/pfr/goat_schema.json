{
  "scheming_version": 1,
  "dataset_type": "goat",
  "about_url": "http://example.com/the-goat-schema",
  "dataset_fields": [
    {
      "field_name": "project_code",
      "label": "Project Code",
      "preset": "project_code_autocomplete",
      "form_placeholder": "S/123456/11"
    },
    {
      "field_name": "title",
      "label": "Title",
      "preset": "title",
      "form_placeholder": "eg. Larry, Peter, Susan"
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. goat-no-5"
    },
    {
      "field_name": "age",
      "label": "Age",
      "form_placeholder": "4"
    },
    {
      "field_name": "sex",
      "label": "Sex",
      "help_text": "Male or Female",
      "help_inline": true,
      "preset": "select",
      "choices": [
        {
          "value": "male",
          "label": "Male"
        },
        {
          "value": "female",
          "label": "Female"
        }
      ]
    },
    {
      "field_name": "personality",
      "label": "Personality",
      "preset": "multiple_checkbox",
      "choices": [
        {
          "value": "friendly",
          "label": "Often friendly"
        },
        {
          "value": "jealous",
          "label": "Jealous of others"
        },
        {
          "value": "spits",
          "label": "Tends to spit"
        }
      ]
    },
    {
      "field_name": "owner_org",
      "label": "Organization",
      "preset": "dataset_organization"
    },
    {
      "field_name": "other",
      "label": {"en": "Other information"},
      "output_validators": "ignore_missing"
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "Photo",
      "preset": "resource_url_upload",
      "form_placeholder": "http://example.com/my-goat-photo.jpg",
      "upload_label": "Photo"
    },
    {
      "field_name": "goats_in_photo",
      "label": "goats in Photo",
      "validators": "ignore_missing int_validator",
      "form_placeholder": "eg. 2"
    },
    {
      "field_name": "others_in_photo",
      "label": "Other Thing in Photo",
      "output_validators": "ignore_missing"
    },
    {
      "field_name": "datetime",
      "label": "Date Taken",
      "label_time": "Time Taken",
      "preset": "datetime"
    }
  ]
}
